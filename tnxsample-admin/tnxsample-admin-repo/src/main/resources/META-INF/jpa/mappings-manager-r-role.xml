<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd">

    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <access>FIELD</access>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <entity class="org.truenewx.tnxsample.admin.model.entity.ManagerRoleRelation">
        <table name="t_manager_r_role" />
        <attributes>
            <embedded name="org.truenewx.tnxexample.domain.model.manager.ManagerRoleRelation.Key" />
            <embedded-id name="id" />
            <many-to-one name="manager" maps-id="managerId" optional="false">
                <join-column name="manager_id" />
            </many-to-one>
            <many-to-one name="role" maps-id="roleId" optional="false">
                <join-column name="role_id" />
            </many-to-one>
        </attributes>
    </entity>

</entity-mappings>
